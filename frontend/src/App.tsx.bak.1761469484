// src/App.tsx
import React, { useState } from "react";
import { BrowserRouter, Routes, Route, Link, useSearchParams } from "react-router-dom";
import Operator from "./Operator";
import Patient from "./Patient";
import "./index.css";

function PatientRoute() {
  const [params] = useSearchParams();
  const sid = params.get("sessionId");
  const sessionId = sid ? Number(sid) : null;
  return <Patient sessionId={sessionId} />;
}

export default function App() {
  // keep a local sessionId only for convenience on the Operator page
  const [sessionId, setSessionId] = useState<number | null>(null);

  return (
    <BrowserRouter>
      <Routes>
        <Route path="/" element={
          <div style={{padding:20}}>
            <h1>LongevityQ</h1>
            <p>Open the console and patient views:</p>
            <ul>
              <li><Link to="/operator">Operator console</Link></li>
              <li><Link to="/patient">Patient screen</Link> (use <code>?sessionId=ID</code>)</li>
            </ul>
          </div>
        } />
        <Route path="/operator" element={<Operator onSessionReady={setSessionId} />} />
        <Route path="/patient" element={<PatientRoute />} />
      </Routes>
    </BrowserRouter>
  );
}
